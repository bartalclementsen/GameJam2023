@page "/Game/{SessionId:guid}"
@using ImminentCrash.Client.Components

<h3 style="">GamePage</h3>

<button @onclick="() => OnQuitGameClicked()">Quit Game</button>
<button @onclick="() => OnPauseGameClicked()">Pause Game</button>
<button @onclick="() => OnContinueGameClicked()">Continue Game</button>

<div style="float:left; width: 250px; padding: 16px;">
    <EventOverviewComponent @ref="EventOverviewComponentRef"></EventOverviewComponent>
</div>

<div style="float:right; width: 300px; padding: 16px; margin-right: 16px; height: 750px; overflow-x: hidden; overflow-y: auto;">
    <CoinOverviewComponent @ref="CoinOverviewComponentRef"></CoinOverviewComponent>
</div>

<div style="bottom: 0; left: 0px; position: fixed; padding: 16px; display: flex;">
    <LivingCostComponent @ref="LivingCostComponentRef"></LivingCostComponent>
    <BoosterOverviewComponent @ref="BoosterOverviewComponentRef"></BoosterOverviewComponent>
</div>

<div style="bottom: 0; right: 0px; position: fixed; padding: 16px;">
    <BalanceComponent @ref="BalanceComponentRef"></BalanceComponent>
</div>