<h3>Event overview</h3>

@foreach (Event eventObject in Events)
{
    <div style="border: 1px solid #000000;">
        <div style="padding: 8px;">
            <h5>@eventObject.Title</h5>
            <span>@eventObject.Details</span>
        </div>
    </div>
}

@code {
    private List<Event> Events = new List<Event>();

    protected override void OnInitialized()
    {
        Events = new List<Event>()
        {
            new Event(1, "New Coin", "Bitcoin was just added to the crypto exchange."),
            new Event(2, "Message from Ex-Girlfriend", "I'm pregnent! I know you are the father. You need to buy diapers."),
        };
    }

    internal void HandleNewGameEvent(GameEvent gameEvent)
    {
        return;
    }

        public class Event
    {
        public int Id { get; set; }
        public string Title { get; set; }
        public string Details { get; set; }

        public Event(int id, string title, string details)
        {
            Id = id;
            Title = title;
            Details = details;
        }
    }
}
